<h1>Solo Play</h1>

<!-- JavaScript -->
<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.0/build/alertify.min.js"></script>

<!-- CSS -->
<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.11.0/build/css/alertify.min.css"/>
<!-- Default theme -->
<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.11.0/build/css/themes/default.min.css"/>
<!-- Semantic UI theme -->
<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.11.0/build/css/themes/semantic.min.css"/>
<!-- Bootstrap theme -->
<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.11.0/build/css/themes/bootstrap.min.css"/>

<div class="jumbotron text-center" hidden= {{gameNotStarted}}>
  <p>Start a game!</p>
  <button class="btn btn-primary btn-lg btn-block" {{action 'startGame'}}>Start</button>
</div>
<div class="jumbotron text-center" style="min-width:750px; min-height:520px;" hidden= {{isDisabled}}>
  <p id="roundNumber"></p>
  {{#each model as |movie|}}
    <button id="{{movie.id}}" {{action 'isBestMovie' movie}} data-best-movie="{{movie.bestMovie}}">
  <img src="{{movie.poster}}"
    class="img-rounded float-left"
    style="max-width:250px; max-height:350px;"
    alt="{{movie.title}}"
    >
  </button>
  {{/each}}
  <!--
<div hidden={{timeForNextRound}}>
  <br><button class="btn btn-primary btn-lg" {{action 'nextRound'}}>Next Round</button>
</div>
-->
  <br>
  <p>Round Points: {{roundPoints}}</p>
</div>
<div class="jumbotron text-center" hidden= {{gameFinished}}>
  <b><p>Final Score: {{gameFinalScore}}</p></b>
  <!--form handler for pushing name to database here-->
  <div class="jumbotron text-center">
    <h2>Player Info</h2>
    <br/><br/>
    <p>Please enter your Name</p>

    <div class="form-horizontal form-group form-group-lg row">
      <div class="col-md-4 col-md-offset-4">
        <label for="firstName">First Name</label> {{input type="text" value=firstName class="form-control" placeholder="Ex: John" autofocus="autofocus"}}
        <label for="lastName">Last Name</label> {{input type="text" value=lastName class="form-control" placeholder="Ex: Doe" autofocus="autofocus"}}
        <br/>
        <button class="btn btn-primary btn-lg btn-block" disabled= {{isDisabled2}} {{action 'pushScoreToDatabase'}}>Submit</button>

      </div>
    </div>

    <br/><br/>
  </div>

</div>
